{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hasura Permission Configuration Schema",
  "description": "Schema for defining table permissions in JSON format for dynamic loading",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "description": "Role name (e.g., AppBaseAdmin, User, Manager)",
      "properties": {
        "select": {
          "type": "object",
          "description": "Read permissions for this role",
          "properties": {
            "columns": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["*"]
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ],
              "description": "Columns accessible to this role (* for all)"
            },
            "filter": {
              "type": "object",
              "description": "Row-level filter conditions"
            },
            "limit": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum number of rows to return"
            },
            "allow_aggregations": {
              "type": "boolean",
              "description": "Whether to allow aggregation queries"
            }
          },
          "required": ["columns", "filter"]
        },
        "insert": {
          "type": "object",
          "description": "Create permissions for this role",
          "properties": {
            "columns": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["*"]
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ],
              "description": "Columns this role can insert into"
            },
            "check": {
              "type": "object",
              "description": "Validation conditions for inserted rows"
            }
          },
          "required": ["columns", "check"]
        },
        "update": {
          "type": "object",
          "description": "Update permissions for this role",
          "properties": {
            "columns": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["*"]
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ],
              "description": "Columns this role can update"
            },
            "filter": {
              "type": "object",
              "description": "Row-level filter for which rows can be updated"
            },
            "check": {
              "type": "object",
              "description": "Validation conditions for updated rows"
            }
          },
          "required": ["columns", "filter"]
        },
        "delete": {
          "type": "object",
          "description": "Delete permissions for this role",
          "properties": {
            "filter": {
              "type": "object",
              "description": "Row-level filter for which rows can be deleted"
            }
          },
          "required": ["filter"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "AppBaseAdmin": {
        "select": {
          "columns": "*",
          "filter": {}
        },
        "insert": {
          "columns": "*",
          "check": {}
        },
        "update": {
          "columns": "*",
          "filter": {}
        },
        "delete": {
          "filter": {}
        }
      },
      "User": {
        "select": {
          "columns": "*",
          "filter": {
            "user_id": {
              "_eq": "X-Hasura-User-Id"
            }
          }
        }
      }
    }
  ]
} 